<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="Floral_Pastel" _name="Floral_Pastel" version="1.0">
    <author>Vasileios Apostolidis-Afentoulis | vapoafe@gmail.com</author>
    <_description>Color scheme for Floral_Pastel color palette</_description>
  
    <!-- Floral_Pastel Colors -->
    <color name="Floral_Pastel_BG" value="#1c2e2d" />
    <color name="Floral_Pastel_FG" value="#f3f4e7" />
    <color name="Floral_Pastel_SELECTION" value="#99732e" />
    <color name="Floral_Pastel_COMMENT" value="#bcbbbd" />
    <color name="Floral_Pastel_CYAN" value="#99d4c8" />
    <color name="Floral_Pastel_GREEN" value="#bce08b" />
    <color name="Floral_Pastel_ORANGE" value="#f3c17a" />
    <color name="Floral_Pastel_PINK" value="#ed93a9" />
    <color name="Floral_Pastel_PURPLE" value="#bcbcd6" />
    <color name="Floral_Pastel_RED" value="#e68b8a" />
    <color name="Floral_Pastel_YELLOW" value="#e8c292" />

    <color name="Floral_Pastel_BGLight" value="#325250" />

    <!-- Global Settings -->
    <style name="text"
           foreground="Floral_Pastel_FG"
           background="Floral_Pastel_BG" />
    <style name="selection"
           background="Floral_Pastel_SELECTION" />
    <style name="cursor"
           foreground="Floral_Pastel_FG"/>
    <style name="secondary-cursor"
           foreground="Floral_Pastel_FG"/>
    <style name="current-line"
           background="Floral_Pastel_BGLight"/>
    <style name="line-numbers"
           foreground="Floral_Pastel_COMMENT"
           background="Floral_Pastel_BG" />
    <style name="background-pattern"
           background="Floral_Pastel_BG"/>

    <!-- Bracket Matching -->
    <style name="bracket-match"
           foreground="Floral_Pastel_FG"
           background="Floral_Pastel_SELECTION"/>
    <style name="bracket-mismatch"
           foreground="Floral_Pastel_RED"
           background="Floral_Pastel_SELECTION"/>

    <!-- Right Margin -->
    <style name="right-margin"
           foreground="Floral_Pastel_COMMENT"
           background="Floral_Pastel_BG"/>
    
    <!-- Search Matching -->
    <style name="search-match"
           foreground="Floral_Pastel_FG"
           background="Floral_Pastel_CYAN"/>

    <!-- Comments -->
    <style name="def:comment"
           foreground="Floral_Pastel_COMMENT"/>
    <style name="def:shebang"
           foreground="Floral_Pastel_COMMENT"
           bold="true"/>
    <style name="def:doc-comment-element"
           italic="true"/>

    <!-- Constants -->
    <style name="def:constant"
           foreground="Floral_Pastel_YELLOW"/>
    <style name="def:special-char"
           foreground="Floral_Pastel_PINK"/>
    <style name="def:number"
           foreground="Floral_Pastel_PURPLE" />

    <!-- Identifiers -->
    <style name="def:identifier"
           foreground="Floral_Pastel_PINK"/>

    <!-- Statements -->
    <style name="def:statement"
           foreground="Floral_Pastel_PINK"/>

    <!-- Types -->
    <style name="def:type"
           foreground="Floral_Pastel_GREEN"/>

    <!-- Operators -->
    <style name="def:operator"
           foreground="Floral_Pastel_PINK"/>

    <!-- Others -->
    <style name="def:preprocessor"
           foreground="Floral_Pastel_PINK"/>
    <style name="def:error"
           foreground="Floral_Pastel_RED"
           bold="true"/>
    <style name="def:note"
           foreground="Floral_Pastel_COMMENT"
           background="Floral_Pastel_FG"/>
    <style name="def:underlined"
           italic="true"
           underline="single"/>

</style-scheme>
